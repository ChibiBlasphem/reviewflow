{
  "extends": ["pob", "pob/node"],
  "rules": {
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "complexity": "off"
  },
  "overrides": [
    {
      "files": ["lib/**/*.test.js", "lib/__tests__/**/*.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
